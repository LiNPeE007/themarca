    <!-- Header -->
    <header class="header" id="header">
        <div class="container header-container">
            <a href="#" class="logo">
                <i class="fas fa-utensils"></i>
                The Marca Turkish Restaurant
            </a>
            
            <nav class="nav-links">
                <a href="#home">Home</a>
                <a href="#menu">Menu</a>
                <a href="#gallery">Gallery</a>
                <a href="#booking">Book a Table</a>
                <a href="#location">Location</a>
                <a href="#contact">Contact</a>
            </nav>
            
            <button class="mobile-menu-btn">
                <i class="fas fa-bars"></i>
            </button>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero" id="home">
        <div class="hero-content">
            <h1>Authentic Turkish Cuisine</h1>
            <p>Experience the rich flavors of Turkey in the heart of Bangkok. Our dishes are prepared with traditional recipes and the finest ingredients.</p>
            <div class="hero-buttons">
                <a href="#menu" class="btn btn-primary">
                    <i class="fas fa-utensils"></i> View Menu
                </a>
                <a href="#booking" class="btn btn-outline">
                    <i class="fas fa-calendar-alt"></i> Book a Table
                </a>
            </div>
        </div>
    </section>           
                   
                    <!-- Menu Section -->
<section class="section menu" id="menu">
    <div class="container">
        <div class="section-title">
            <h2>Our Menu</h2>
            <p>Authentic Turkish cuisine prepared with traditional recipes</p>
        </div>

    <!-- Breakfast Section -->
<div class="menu-category">
    <h3>KAHVALTI / BREAKFAST</h3>
    <div class="menu-items">
        <!-- Menemen -->
        <div class="menu-item">
            <img src="https://i.imgur.com/JrQ6f0A.jpg" alt="Menemen" class="menu-item-img">
            <div class="menu-item-content">
                <div class="menu-item-header">
                    <span class="menu-item-name">Menemen / Scrambled Eggs with Vegetables</span>
                    <span class="menu-item-price">199 THB</span>
                </div>
                <p class="menu-item-desc">Traditional Turkish scrambled eggs with tomatoes, green peppers, and spices, served with fresh bread.</p>
            </div>
        </div>

        <!-- Omlet -->
        <div class="menu-item">
            <img src="https://i.imgur.com/pQFhxWk.jpg" alt="Omelet" class="menu-item-img">
            <div class="menu-item-content">
                <div class="menu-item-header">
                    <span class="menu-item-name">Omlet / Omelet</span>
                    <span class="menu-item-price">149 THB</span>
                </div>
                <p class="menu-item-desc">Fluffy omelet made with fresh eggs, served with your choice of cheese, sucuk (Turkish sausage), or vegetables.</p>
            </div>
        </div>

        <!-- Sucuklu Yumurta -->
        <div class="menu-item">
            <img src="https://i.imgur.com/KLm3Z0x.jpg" alt="Sucuklu Yumurta" class="menu-item-img">
            <div class="menu-item-content">
                <div class="menu-item-header">
                    <span class="menu-item-name">Sucuklu Yumurta / Fried Eggs with Turkish Sausage</span>
                    <span class="menu-item-price">199 THB</span>
                </div>
                <p class="menu-item-desc">Fried eggs served with spicy Turkish sucuk sausage, a classic Turkish breakfast favorite.</p>
            </div>
        </div>

        <!-- Kavurmalı Yumurta -->
        <div class="menu-item">
            <img src="https://i.imgur.com/MNwTbGQ.jpg" alt="Kavurmalı Yumurta" class="menu-item-img">
            <div class="menu-item-content">
                <div class="menu-item-header">
                    <span class="menu-item-name">Kavurmalı Yumurta / Fried Eggs with Roasted Meat</span>
                    <span class="menu-item-price">249 THB</span>
                </div>
                <p class="menu-item-desc">Fried eggs served with tender roasted beef, a hearty and protein-rich breakfast option.</p>
            </div>
        </div>

        <!-- Patates Kızartması -->
        <div class="menu-item">
            <img src="https://i.imgur.com/yBZQw3H.jpg" alt="French Fries" class="menu-item-img">
            <div class="menu-item-content">
                <div class="menu-item-header">
                    <span class="menu-item-name">Patates Kızartması / French Fries</span>
                    <span class="menu-item-price">119 THB</span>
                </div>
                <p class="menu-item-desc">Crispy golden fries, perfectly seasoned and served with ketchup or garlic yogurt sauce.</p>
            </div>
        </div>

        <!-- Kahvaltı Tabağı -->
        <div class="menu-item">
            <img src="https://i.imgur.com/vVbTqHr.jpg" alt="Turkish Breakfast Plate" class="menu-item-img">
            <div class="menu-item-content">
                <div class="menu-item-header">
                    <span class="menu-item-name">Kahvaltı Tabağı / Breakfast Plate</span>
                    <span class="menu-item-price">349 THB</span>
                </div>
                <p class="menu-item-desc">Complete Turkish breakfast spread including: olives, white cheese, kasar cheese, butter, honey, jam, boiled eggs, tomatoes, cucumbers, french fries, and unlimited Turkish tea.</p>
            </div>
        </div>
    </div>
</div>

      <!-- Soups Section -->
<div class="menu-category">
    <h3>ÇORBALAR / SOUPS</h3>
    <div class="menu-items">
        <!-- Mercimek -->
        <div class="menu-item">
            <img src="https://i.imgur.com/LqQ9W3j.jpg" alt="Lentil Soup" class="menu-item-img">
            <div class="menu-item-content">
                <div class="menu-item-header">
                    <span class="menu-item-name">Mercimek / Lentil Soup</span>
                    <span class="menu-item-price">119 THB</span>
                </div>
                <p class="menu-item-desc">Classic Turkish red lentil soup with carrots, onions and a hint of mint, served with lemon wedges and crusty bread.</p>
            </div>
        </div>

        <!-- Ezogelin -->
        <div class="menu-item">
            <img src="https://i.imgur.com/RtVJk9P.jpg" alt="Ezogelin Soup" class="menu-item-img">
            <div class="menu-item-content">
                <div class="menu-item-header">
                    <span class="menu-item-name">Ezogelin / Spicy Red Lentil and Bulgur Soup</span>
                    <span class="menu-item-price">119 THB</span>
                </div>
                <p class="menu-item-desc">Hearty soup made with red lentils, bulgur wheat, rice, and flavored with mint and red pepper flakes.</p>
            </div>
        </div>

        <!-- İşkembe -->
        <div class="menu-item">
            <img src="https://i.imgur.com/9XzQZhH.jpg" alt="Tripe Soup" class="menu-item-img">
            <div class="menu-item-content">
                <div class="menu-item-header">
                    <span class="menu-item-name">İşkembe / Tripe Soup</span>
                    <span class="menu-item-price">249 THB</span>
                </div>
                <p class="menu-item-desc">Traditional Turkish tripe soup with garlic-infused broth, believed to be a great hangover remedy.</p>
            </div>
        </div>
    </div>
</div>

      <!-- Kebabs Section -->
