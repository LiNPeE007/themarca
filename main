    <!-- Footer -->
    <footer class="footer" id="contact">
        <div class="container">
            <div class="footer-container">
                <div class="footer-about">
                    <h3>The Marca</h3>
                    <p>Authentic Turkish restaurant in Bangkok serving traditional dishes made with the finest ingredients and family recipes.</p>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-line"></i></a>
                        <a href="#"><i class="fab fa-tripadvisor"></i></a>
                    </div>
                </div>
                
                <div class="footer-links">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="#home"><i class="fas fa-chevron-right"></i> Home</a></li>
                        <li><a href="#menu"><i class="fas fa-chevron-right"></i> Menu</a></li>
                        <li><a href="#gallery"><i class="fas fa-chevron-right"></i> Gallery</a></li>
                        <i class="fas fa-chevron-right"></i> Book a Table</a></li>
                        <li><a href="#location"><i class="fas fa-chevron-right"></i> Location</a></li>
                        <li><a href="#contact"><i class="fas fa-chevron-right"></i> Contact Us</a></li>
                    </ul>
                </div>
                
                <div class="footer-links">
                    <h3>Menu Categories</h3>
                    <ul>
                        <li><a href="#"><i class="fas fa-chevron-right"></i> Breakfast</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right"></i> Kebabs</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right"></i> Wraps</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right"></i> Desserts</a></li>
